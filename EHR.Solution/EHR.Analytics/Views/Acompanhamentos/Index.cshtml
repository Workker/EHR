
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">

    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li class="active"><span>Acompanhamentos</span></li>
            </ol>

            <h1>Acompanhamentos <small>Prescrições</small></h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="main-box clearfix">
                <header class="main-box-header clearfix">
                    <h2 class="pull-left">Prescrições</h2>

                    <div id="reportrange" class="pull-right daterange-filter">

                        <select style="border:hidden">
                            <option>Aberto</option>
                            <option>Em andamento</option>
                            <option>Finalizadas</option>
                        </select>
                    </div>
                </header>

                <div class="main-box-body clearfix">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th><a href="#"><span>Tipo de Prescrição</span></a></th>
                                    <th><a href="#" class="desc"><span>Medico</span></a></th>
                                    <th><a href="#" class="asc"><span>CRM</span></a></th>
                                    <th class="text-center"><span>Status</span></th>
                                    <th class="text-right"><span>Data de criação</span></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in ViewBag.Prescricoes)
                                {
                                    <tr>
                                        <td>
                                            @item.PrescriptionType
                                        </td>
                                        <td>
                                            @item.ProfessionalName
                                        </td>
                                        <td>
                                            @item.ProfessionalRegistration_id
                                        </td>
                                        <td class="text-center">
                                            <span class="label label-success">@item.Status</span>
                                        </td>
                                        <td class="text-right">
                                            @item.CreationDate
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
