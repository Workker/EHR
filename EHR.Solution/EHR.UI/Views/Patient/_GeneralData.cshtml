    window.onload = function () {
        $("#motivoDaAdmissao").tokenInput("../Patient/Admission", {
            theme: "facebook"
        });
    };
    $(document).ready(function () {
        $("#motivoDaAdmissao").tokenInput("../Patient/Admission", {
            theme: "facebook"
