@using System.Globalization
@using EHR.Domain.Entities
@using EHR.Domain.Util
@using EHR.UI.Models

@foreach (DiagnosticModel diagnostic in ViewBag.Diagnostics)
{
    <li class="clearfix">
        <span class="firstColumn">@EnumUtil.GetDescriptionFromEnumValue((DiagnosticTypeEnum)Enum.Parse(typeof(DiagnosticTypeEnum), @diagnostic.Type.ToString(CultureInfo.InvariantCulture)))</span>
        <a class="action" onclick='deleteRow(this, "../Patient/DeleteDiagnostic/?id=@diagnostic.Id", null)'><span>X</span></a>
        <span class="lastColumn">@diagnostic.Cid.Code</span>
        <span class="middleColumn">@diagnostic.Cid.Description</span>
    </li>
}