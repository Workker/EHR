@model AccountModel
@using System.Globalization
@using EHR.Domain.Entities
@using EHR.UI.Models
@using EHR.Infrastructure.Util
@foreach (AccountModel account in ViewBag.Accounts)
{
    <div class="clearfix bottomLine">
        <form id="Accounts">
            <div class="clearfix _8m _8u" style="margin-bottom: 10px;">
                <div class="pls">
                    <div class="fsm fwn fcg">
                        <h2 class="text">@account.FirstName &nbsp;@account.LastName</h2>
                        <div class="fbProfileByline searchResultPersonByline">
                            <span class="fbProfileBylineFragment">
                                <label>
                                    @(EnumUtil.GetDescriptionFromEnumValue((ProfessionalRegistrationTypeEnum)Enum.Parse(typeof(ProfessionalRegistrationTypeEnum), account.ProfessionalRegistration.FirstOrDefault().Type.ToString(CultureInfo.InvariantCulture))))
                                    :&nbsp;
                                </label>@account.ProfessionalRegistration.FirstOrDefault().Number - @account.ProfessionalRegistration.FirstOrDefault().State.Acronym
                                <input type="hidden" name="professionalRegistrationId" hidden value="@account.ProfessionalRegistration.FirstOrDefault().Id"/>
                                &nbsp;&nbsp;
                                   <label>E-mail:&nbsp;</label>@account.Email
                            </span>
                        </div>
                        <br />
                        <input type="hidden" value="@account.Id" name="accountId"/>
                        <input type="submit" onclick='approveAccount(this)' value="Aprovar" class="uibutton special" />&nbsp;&nbsp;
                           <input type="submit" onclick='refuseAccount(this)' value="Reprovar" class="uibutton" />
                    </div>
                </div>
            </div>
        </form>
    </div>
}